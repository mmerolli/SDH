    align-items: center;
    height: 100vh;
  }
  
  .form {
    background-color: var(--light-color);
    padding: 40px;
    border-radius: 10px;
    box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
    width: 400px;
    max-width: 90%;
  }
  
  h2 {
    margin-top: 0;
    margin-bottom: 20px;
    text-align: center;
    color: var(--first-color);
    font-size: 2.5rem;
    text-shadow: 1px 1px #ddd;
    letter-spacing: 1px;
  }
  
  input[type="text"],
  input[type="email"],
  input[type="password"],
  select {
    width: 100%;
